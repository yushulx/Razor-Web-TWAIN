<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <PackageId>RazorWebTWAIN</PackageId>
    <Version>0.1.0</Version>
    <Authors>yushulx</Authors>
    <Company>Dynamsoft</Company>
    <TargetFramework>net6.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <Description>A Razor class library for Dynamic Web TWAIN. It allows you to develop document scanner applications in .NET MAUI Blazor.</Description>
    <PackageProjectUrl>https://github.com/yushulx/Razor-Web-TWAIN</PackageProjectUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/yushulx/Razor-Web-TWAIN</RepositoryUrl>
    <PackageTags>document;razor;blazor;document-scan;document-management;document-scanner;MAUI</PackageTags>
    <PackageReleaseNotes>
    	- Added basic document scanning and uploading methods.
    </PackageReleaseNotes>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
  </PropertyGroup>


  <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="6.0.11" />
  </ItemGroup>

  <ItemGroup>
    <None Update="README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>
</Project>
